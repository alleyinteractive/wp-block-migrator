{
    "name": "alleyinteractive/wp-block-migrator",
    "description": "Utilities for assisting with Gutenberg migrations.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Alley Interactive",
            "email": "info@alley.com"
        }
    ],
    "require-dev": {
        "alleyinteractive/alley-coding-standards": "^1.0",
        "mantle-framework/testkit": "^0.11.3"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "alleyinteractive/composer-wordpress-autoloader": true
        }
    },
    "extra": {
        "wordpress-autoloader": {
            "autoload": {
                "Alley\\WP\\WP_Block_Migrator\\": "src"
            },
            "autoload-dev": {
                "Alley\\WP\\WP_Block_Migrator\\Tests\\": "tests"
            }
        }
    },
    "scripts": {
        "phpcs": "phpcs .",
        "phpunit": "phpunit .",
        "test": [
            "@phpcs",
            "@phpunit"
        ]
    }
}
